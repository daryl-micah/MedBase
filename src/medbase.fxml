<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:controller="medbaseController" xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0">
    <top>
        <Label text="MedBase" style="-fx-font-size: 20px;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Blood Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="bloodTypeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Ailment:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="ailmentField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Button text="Save" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" onAction="#savePatient" />
        </GridPane>
    </center>
</BorderPane>
